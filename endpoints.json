{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },

  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },

  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id" : 1,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url" : "article_img_url",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "author" : "author_name",
          "title" : "article_title",
          "article_id" : 1,
          "body" : "Text from the article..",
          "topic" : "topic_name",
          "created_at" : "2020-07-09 21:11:00",
          "votes" : 0,
          "article_img_url" : "article_img_url"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments":{
    "description": "serves all the comments associated with an article_id",
    "queries": [],
    "exampleResponse": {
      "comments":[
        {
          "comment_id": 1,
          "body": "Text from comment...",
          "article_id": 1,
          "author": "author_name",
          "votes": 0,
          "created_at": "2020-01-01 01:01:00"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments":{
    "description": "Creates a comment to the given article",
    "queries": [],
    "format": {
      "username" : "Must-be-an-existing-username",
      "body" : "body..."
    },
    "exampleResponse": {
      "comment": {
        "comment_id" : 19,
        "body" : "body...",
        "article_id" : 1,
        "author" : "existing-username",
        "votes" : 0,
        "created_at": "2023-10-06T09:55:37.094Z"
      }
    }
  }
}

